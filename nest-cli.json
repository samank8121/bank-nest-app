{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/bank-app/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/bank-app/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/bank-app",
  "projects": {
    "bank-app": {
      "type": "application",
      "root": "apps/bank-app",
      "entryFile": "main",
      "sourceRoot": "apps/bank-app/src",
      "compilerOptions": {
        "tsConfigPath": "apps/bank-app/tsconfig.app.json"
      }
    },
    "swagger": {
      "type": "application",
      "root": "apps/swagger",
      "entryFile": "main",
      "sourceRoot": "apps/swagger/src",
      "compilerOptions": {
        "tsConfigPath": "apps/swagger/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}